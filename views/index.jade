extends layout



block content
    .jumbotron-index.text-center
        .container
            .row
                .col.col-lg-12.col-sm-12
                    h1 Fantasy Football
                    p Live tracking, managing, and editing
                    .row
                        .col.col-lg-12.col-sm-12
                            p
                                a.btn.btn-primary.btn-block.btn-lg.jumbo-btn Find League
                            - var user = isLogged
                            if !user
                                p
                                    a(href='/signin').btn.btn-info.btn-block.btn-lg.jumbo-btn Sign in 
                            else
                                p
                                    a(href='/signout').btn.btn-info.btn-block.btn-lg.jumbo-btn Sign out